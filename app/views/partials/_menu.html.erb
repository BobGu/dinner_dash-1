<div id="container">
  <% @categories.each do |category| %>
    <div class="category-block">
      <div class= "category-title">
        <h2 id="category-id-<%= category.id %>" class="menu-category"><%= category.name %></h2>
      </div>
        <% category.items.each do |item| %>
          <div class="thumbnail col-sm-6 col-md-4" style="height:350px;">
            <img src="/images/Gourmet_hamburger_with_bacon.jpg" alt="...">
            <div class="caption">
              <h3><%= item.title %></h3>
              <p> <%= item.description %></p>
              <p style="position:absolute;bottom:30px;left:25px;margin:0;padding:5px 3px;"> Price:$<%= item.price %></p>
              <p><a href="#" class="btn btn-default" role="button" style="position:absolute;bottom:30px;right:25px;margin:0;padding:5px 3px;">Add to Cart</a></p>
            </div>
          </div>
        <%end%>
    </div>
  <%end%>
</div>
