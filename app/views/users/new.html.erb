<%= form_tag users_path do %>  <%= flash[:errors] %><%= text_field_tag "user[name]", nil, placeholder: "Full Name" %><%= text_field_tag "user[email_address]", nil, placeholder: "Email Address" %><%= text_field_tag "user[display_name]", nil, placeholder: "(Optional) Display Name" %><%= password_field_tag "user[password]", nil, placeholder: "Password" %><%= password_field_tag "user[password_confirmation]", nil, placeholder: "Confirm Password" %><%= submit_tag "Create User" %><% end %>